  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "plural"

    args = [
      "wkspace",
      "helm-deps",
    ]

    sha     = "20fb214458748a93fdbdf5f4485ae4e90f6a635670ff940c18b10994b74d6f78"
    retries = 0
    verbose = false
  }
}
